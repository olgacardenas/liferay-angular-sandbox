<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>portlet-a</portlet-name>
		<display-name>Portlet A</display-name>
		<portlet-class>com.copa.PortletA</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/portlet-a/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/portlet-a/edit.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/html/portlet-a/config.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<portlet-info>
			<title>Portlet A</title>
			<short-title>Portlet A</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>portlet-b</portlet-name>
		<display-name>Portlet B</display-name>
		<portlet-class>com.copa.PortletB</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/portlet-b/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/html/portlet-b/config.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<portlet-info>
			<title>Portlet B</title>
			<short-title>Portlet B</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>